form.form-inline
  input.form-control(placeholder='ホストIP', ng-model='hostIp', style='margin-right: 0.5em;')
  input.form-control(placeholder='ストリームID', ng-model='streamId', style='margin-right: 0.5em;')
  input.form-control(placeholder='リモートIP', ng-model='remoteIp', style='margin-right: 1em;')
  button.btn.btn-default(ng-click='play()') 再生
div(ng-repeat='player in players')
  object(data='data:application/x-silverlight-2,', type='application/x-silverlight-2', width='100%', height='100%')
    param(name='source', value='#{root}plugins/wmvplayer.xap')
    param(name='onError', value='onSilverlightError')
    param(name='background', value='white')
    param(name='minRuntimeVersion', value='5.0.61118.0')
    param(name='autoUpgrade', value='true')
    param(name='onLoad', value='loaded')
    a(href='http://go.microsoft.com/fwlink/?LinkID=149156&v=5.0.61118.0', style='text-decoration:none')
      img(src='http://go.microsoft.com/fwlink/?LinkId=161376', alt='Microsoft Silverlight の取得', style='border-style:none')
  iframe#_sl_historyFrame(style='visibility:hidden;height:0px;width:0px;border:0px')
